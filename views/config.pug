extends template/layout

block otherStylesheets
  link(href='/now/app/static/stylesheets/config.css', rel='stylesheet')

block content
  .container
    h1= title
    h2 Background Type
    div.selectGroups
      div.selectGroup.groupBg#bg-artist Artist
      div.selectGroup.groupBg#bg-album Album
      div.selectGroup.groupBg#bg-transparent Transparent
      div.selectGroup.groupBg#bg-none None
    h2 Background Options
    div.selectGroups
      div.selectGroup.groupBgopt#bgopt-blur Blur
      span.backgroundInputLine
        small Default image URL:&nbsp;
          input.input-group.groupBgopt#bgopt-default(name='defaultBackground', type='text', size='20', maxlength='300', placeholder='None')
          | &nbsp;
          a.backgroundInputSave.hide(href='#' onclick='return false;')
            i.fas.fa-save.fa-sm
            |  save
    h2 Weather Units
    div.selectGroups
      div.selectGroup.groupUnits#units-imperial Imperial (ºF)
      div.selectGroup.groupUnits#units-metric Metric (ºC)
    h2 Time and Date Options
    div.selectGroups
      div.selectGroup.groupDatetime#datetime-24hr 24-hour time
      div.selectGroup.groupDatetime#datetime-weekday Show weekday
      div.selectGroup.groupDatetime#datetime-seconds Show seconds
    .links
      a(href='/now')
        | home&nbsp;
        i.fas.fa-home.fa-sm
      a(href='/now/app/hue')
        | hue settings&nbsp;
        i.fas.fa-lightbulb.fa-sm

block otherJavascripts
  script(src='/now/app/static/javascripts/utility/general.js')
  script(src='/now/app/static/javascripts/config.js')
