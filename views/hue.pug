extends template/layout

block otherStylesheets
  link(href='/now/app/static/stylesheets/config.css', rel='stylesheet')

block content
  .container
    h1= title
    h2
      span.hide.hueClientId= hueClientId
      span.hide.hueAppId= hueAppId
      ol
        li.hueStep#loading
          i.fas.fa-circle-notch.fa-spin
          | Loading...
        li.hide.hueStep#connect
          a.appAuth Click here
          |  to connect your Hue account.
        li.hide.hueStep#hue-step-rooms Select one or more  rooms to control.
          div.hide.selectGroupsLoading#select-groups-loading-rooms
            i.fas.fa-circle-notch.fa-spin
            | Loading...
          div.selectGroups#select-groups-rooms
        li.hide.hueStep#hue-step-done All set. Hit 
          span.code l
          |  on your now playing page to toggle light control on and off.
    .links
      a(href='/now')
        | home 
        i.fas.fa-home.fa-sm
      a(href='/now/app/config')
        | settings 
        i.fas.fa-sliders-h.fa-sm

block otherJavascripts
  script(src='/now/app/static/javascripts/hue.js')
